{ [server] cycle_up

	if ( game.serverside )
	{
		callevent light_on
	}

	if !ROAM_ON
	setvard ROAM_ON 1
	callevent BURST_FREQ flame_burst_check
	roam 1
}

{ [server] swing_dodamage //1:AttackHit(1/0)  2:EntityHit  3:StartOrigin  4:EndOrigin

	setvard MISS_ATTACK 0
	
	if PARAM1
	if ( FIRE_ATTACK == 1 )
	{
	   	applyeffect PARAM2 effects/dot_fire FIRE_DURATION $get(ent_me,id) FIRE_DAMAGE 
	}

	if ( FIRE_ATTACK == 2 )
	{
	   	applyeffect PARAM2 effects/dot_cold_freeze FREEZE_DURATION $get(ent_me,id) FREEZE_DAMAGE
	}
	setvard FIRE_ATTACK 0
}

