{ [client]
	setvard GLOW_COLOR (255,255,128)
	setvard GLOW_RAD 200
	const NO_LOOP_DETECT 1
}

{ [client] client_activate

	setvard SKEL_ID PARAM1
	if SKEL_LIGHT_ID equals 'SKEL_LIGHT_ID'
	cleffect light new $getcl(SKEL_ID,origin) GLOW_RAD GLOW_COLOR 5.0
	setvard SKEL_LIGHT_ID game.script.last_light_id
	setcallback render enable

	//callevent light_loop
}

{ [client] game_prerender

	local L_POS $getcl(SKEL_ID,origin)
	cleffect light SKEL_LIGHT_ID L_POS GLOW_RAD GLOW_COLOR 1.0
}

{ [server] game_death

	clientevent remove all MY_LIGHT_SCRIPT
	
	local L_ORIGIN "(63,1776,-3519)"
	
	calleventloop game.players get_chosen_one
	
	if ( CHOSEN_ONE isnot 'CHOSEN_ONE' )
	{
		clientevent new all "kfortress/nh_appear_cl" L_ORIGIN 0
		createitem item_ring_ryza L_ORIGIN
		callexternal ent_lastcreated bitem_reserve CHOSEN_ONE
	}
}

{ get_chosen_one

	if ( game.script.iteration == 0 ) callexternal GAME_MASTER gm_find_strongest_reset
	else callexternal GAME_MASTER gm_find_strongest_player
	
	local L_STRONGEST $get(GAME_MASTER,scriptvar,'THE_CHOSEN_ONE')
	local L_QUEST $get_quest_data(L_STRONGEST,'manaring')
	local L_ITEM $item_exists(L_STRONGEST,'item_ring_ryza')
	
	if ( L_QUEST isnot '0' ) exitevent
	if ( L_ITEM ) exitevent
	
	setvard CHOSEN_ONE L_STRONGEST
	breakloop
}

{ [server] light_on
	if !I_R_GLOWING
	setvard I_R_GLOWING 1
	clientevent persist all $currentscript $get(ent_me,index)
	setvard MY_LIGHT_SCRIPT game.script.last_sent_id
}
