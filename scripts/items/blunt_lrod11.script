{ repulse_start

	playviewanim  5
	playowneranim critical bow_release

	if ( $get(ent_owner,mp) < 75 )
	{
		dplayermessage ent_owner Lightning Rod: Static shock - insufficient mana!
		local EXIT_SUB 1
	}
	if !EXIT_SUB

	//givemp -75
	
	createnpc monsters/summon/lightning_repulse $get(ent_owner,origin) $get(ent_owner,id) 512 3.0 0 spellcasting.lightning
}