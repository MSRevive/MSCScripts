	//basic thrust
	//(or swipe if POLE_PRIMARY_SWIPE)
	local reg.attack.type strike-land
	local reg.attack.keys +attack1
	local reg.attack.range MELEE_RANGE
	local reg.attack.dmg MELEE_DMG
