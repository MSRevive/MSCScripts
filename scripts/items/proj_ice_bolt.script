{ game_dodamage //1: Attack Hit (1/0)  2: Entity Attack hit  3:  Start Position  4:  End Position

	if PARAM1

	setvard MY_OWNER $get(ent_expowner,id)
	setvard OWNER_ISPLAYER $get(MY_OWNER,isplayer)
	local ENT_HIT $get(PARAM2,id)

	if ( OWNER_ISPLAYER == 1 )
	{
		if !game.pvp
		if $get(ENT_HIT,isplayer)
		local EXIT_SUB 1
	}
	if !EXIT_SUB

	local L_RELATIONSHIP $get(MY_OWNER,relationship,ENT_HIT)
	if L_RELATIONSHIP isnot ally
	if L_RELATIONSHIP isnot neutral
	if L_RELATIONSHIP isnot none

	setvard EFFECT_DURATION $get(MY_OWNER,skill.spellcasting.ice)
	multiply EFFECT_DURATION 0.5
	if ( EFFECT_DURATION < 3 ) setvard EFFECT_DURATION 3
	
	setvard EFFECT_DAMAGE $randf(5,15)
	if ( OWNER_ISPLAYER )
	{
		setvard EFFECT_DAMAGE $get(MY_OWNER,skill.spellcasting.ice)
		divide EFFECT_DAMAGE 3
	}

	applyeffect ENT_HIT effects/dot_cold EFFECT_DURATION MY_OWNER EFFECT_DAMAGE spellcasting.ice
}