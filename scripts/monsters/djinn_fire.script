	setvard I_ATTACKED 1

	setvar PUSH_VEL $relvel(10,30,10)
	//dodamage ENTITY_ENEMY ATTACK_HITRANGE $randf(25,35) 75%
	if ( $get(HUNT_LASTTARGET,range) <= ATTACK_HITRANGE ) xdodamage HUNT_LASTTARGET direct $randf(45,80) 75% ent_me ent_me none blunt dmgevent:swing

	if( $rand(1,4) == 1 ) setvard ANIM_ATTACK hit_down

   //if( $rand(1,10) == 1 ) applyeffect $get(ent_laststruckbyme,id) effects/effect_push 3 $relvel(0,200,200) 0

	callevent attack_sound
}

{ attack_2

	setvard I_ATTACKED 1

	if ( $get(HUNT_LASTTARGET,range) <= ATTACK_HITRANGE ) xdodamage HUNT_LASTTARGET direct $randf(80,200) 75% ent_me ent_me none blunt dmgevent:swing
