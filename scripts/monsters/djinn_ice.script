	setvar NO_STEP_ADJ 1

	const TORCH_LIGHT_SCRIPT	items/item_djinn_light

	precachefile TORCH_LIGHT_SCRIPT

	//monsters/troll_ice
	//be effing nice if xrecachefile worked here!
