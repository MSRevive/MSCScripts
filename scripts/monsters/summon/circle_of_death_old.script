{ circle_end

	clientevent remove all THIS_SCRIPT_CLIENT_ID
	setvard CIRCLE_ON 0

	clientevent remove all $currentscript	//there can be only one
	playsound 0 10 SOUND_FADE
	callevent 0.5 circle_remove
