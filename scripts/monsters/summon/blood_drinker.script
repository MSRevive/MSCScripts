{ notify_return
	if ( !OWNER_ISPLAYER )
	{
		callexternal MY_OWNER sword_return
	}
	else
	{
		callexternal RETURN_ID sword_return
	}
	setprop ent_me rendermode 2
	setprop ent_me renderamt 0
	effect glow ent_me (0,0,0) 0 -1 0
	setvard IS_ACTIVE 0
	callevent 0.1 remove_me
}

{ remove_me

	deleteent ent_me
}

