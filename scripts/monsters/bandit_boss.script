{ do_special

	local L_FREQ_SPECIAL FREQ_SPECIAL

	callevent check_legal_act
	if ( !LEGAL_ACT ) local L_FREQ_SPECIAL 5

	local CAN_SEE_NME $cansee(enemy)
	if ( !CAN_SEE_NME ) local L_FREQ_SPECIAL 5

	callevent L_FREQ_SPECIAL do_special

	if CAN_SEE_NME
	if LEGAL_ACT
	
	if ( BOSS_TYPE == 1 )
	{
		//flame burst
		playsound 0 10 SOUND_POWERUP
		effect glow ent_me (255,0,0) 128 3 3
		setvard AS_ATTACKING 20
		playanim critical ANIM_SPELL
	}

	if ( BOSS_TYPE == 2 )
	{
		//stun attack
		//playsound 0 10 SOUND_POWERUP
		setvard NEXT_ATTACK ANIM_SWORD_SLOW
	}

	if ( BOSS_TYPE == 3 )
	{
		//charge attack
		playsound 0 10 SOUND_POWERUP
		playanim break
		setvard LEAP_TARGET $get(ent_lastseen,id)
		setvard POWER_ATTACK 1
		if ( $get(LEAP_TARGET,range) < 200 )
		{
			setvard PURE_FLEE 1
			callevent npcatk_flee LEAP_TARGET 300 2.0
			callevent 2.1 leap_scan
			local LEAP_EXIT_SUB 1
		}
		if !LEAP_EXIT_SUB
		callevent 0.1 leap_scan
	}

	if ( BOSS_TYPE == 4 )
	{
		local PICK_ATK $rand(1,2) //we'll add a third attack if we get ice_spikes working
		if ( PICK_ATK == 1 )
		{
			//blizzard at most distant target
			callevent npcatk_find_distant 2048
			callevent npcatk_suspend_ai
			//dbg temp most distant returned $get(NPC_MOST_DISTANT,name)
			setmovedest NPC_MOST_DISTANT 9999
			setvard BLIZZ_TARGET NPC_MOST_DISTANT
			callevent 0.1 go_blizz
		}

		if ( PICK_ATK == 2 )
		{
			//freezing sphere
			effect glow ent_me (128,128,255) 128 3 3
			playsound SOUND_POWERUP
			callevent 2.0 do_sphere
		}
	}

	if ( BOSS_TYPE == 5 )
	{
		playsound 0 10 SOUND_POWERUP
		effect glow ent_me (0,255,255) 128 3 3
		setvard SCATTER_SHOT 1
	}

	if ( BOSS_TYPE == 6 )
	{
		add NOVA_PICK_ATK 1

		setvard DOING_NOVA 1
		callevent 10.0 reset_doing_nova

		if ( NOVA_PICK_ATK > 4 ) setvard NOVA_PICK_ATK 1

		if ( NOVA_PICK_ATK == 1 )
		{
			//firewall
			callevent npcatk_find_distant 2048
			//dbg temp most distant returned $get(NPC_MOST_DISTANT,name)
			setmovedest NPC_MOST_DISTANT 9999
			setvard NOvA_TARGET NPC_MOST_DISTANT
			playsound 0 10 SOUND_POWERUP
			setvard AS_ATTACKING 20
			setvard NOVA_ATTACK fire_wall
			callevent 0.1 do_fire_wall
		}

		if ( NOVA_PICK_ATK == 2 )
		{
			//flame burst
			setvard NOVA_ATTACK flame_burst
			playsound 0 10 SOUND_POWERUP
			effect glow ent_me (255,0,0) 128 3 3
			setvard AS_ATTACKING 20
			playanim critical ANIM_SPELL
		}

		if ( NOVA_PICK_ATK == 3 )
		{
			//uber fireball
			playsound 0 10 SOUND_POWERUP
			effect glow ent_me (255,72,0) 128 3 3
			callevent 2.0 do_fireball
		}

		if ( NOVA_PICK_ATK == 4 )
		{
			//flaming skull
			setvard NOVA_ATTACK flame_skull
			playsound 0 10 SOUND_POWERUP
			effect glow ent_me (255,255,0) 128 3 3
			setvard AS_ATTACKING 20
			playanim critical ANIM_SPELL
		}

		//flaming skull (circles continuously outward, screams, sets all on fire it touches)
	}
}

