		setvard PLR_DMG 0
		if ( game.cvar.ms_chatlog ) chatlog $timestamp(>) PLAYER_JOIN: $get(ent_me,name) [ $get(ent_me,steamid) ] ip: $get(ent_me,ip)
		setvard HAD_FIRST_SPAWN 1
