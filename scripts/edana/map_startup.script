	setvarg G_CONTROL_MAP 1

	setvarg G_MAP_NAME "The Village of Edana"
	setvarg G_MAP_DESC "This village grew around the temple of Urdual of the southern frontier"
	setvarg G_MAP_DIFF "(Beginner/Safe Area)"

	
