{ game_dodamage //Called from various storm hazards //PARAM1=hit:0|1 PARAM2=ent_hit PARAM3=(start) PARAM4=(end) PARAM5=DmgType PARAM6=DmgAmt

	if HAZARD_STRUCK
	setvard HAZARD_STRUCK 0
	
	if PARAM1
	if $int(PARAM6)
	if $get(ent_me,relationship,PARAM2) equals 'enemy' //if the target is an enemy, and was hit
	
	if ( BREATH_CYCLE == 1 ) //meteors
	{
		applyeffect PARAM2 effects/dot_fire 5.0 $get(ent_me,id) DOT_FIRE
	}
	else if ( BREATH_CYCLE == 2 ) //lightning
	{
		applyeffect PARAM2 effects/dot_lightning 10.0 $get(ent_me,id) DOT_LIGHTNING
	}
}


