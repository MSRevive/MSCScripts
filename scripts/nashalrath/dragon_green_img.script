	name_unique gdragon_img
	race demon
	hp 99999
	invincible 1
	setvard PLAYING_DEAD 1
	nopush 1
	width 1
	height 1
	fly 1
	gravity 0
	setprop ent_me movetype 0
	saytextrange 2048
	callevent 0.1 scan_for_players

	setprop ent_me rendermode 5
	setprop ent_me renderamt DG_BASE_RENDERAMT
