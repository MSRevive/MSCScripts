{ do_lightning_bolt

	if ( !LIGHTNING_FLICKERING )
	{
		setvard LIGHTNING_FLICKERING 1
		setvard FLICKER_COUNT 0
		callevent lightning_flicker
		callevent 5.0 lightning_flicker_end
	}

	local L_POS STORM_CENTER
	local RND_ANG $randf(0,359.99)
	local RND_DIST $randf(0,STORM_RAD)
	vectoradd L_POS $relpos($vec(0,RND_ANG,0),$vec(0,RND_DIST,0))
	
	local L_GROUND L_POS
	vectorset L_GROUND z $get_ground_height(L_POS)
	
	local L_STRIKE_TIME 0 //Strike time 0 means less fx, and no damage
	if ( $vec.z(L_GROUND) > -3000 ) //If strike is landing on the island, not below
	{
		local L_STRIKE_TIME 3 //Then turn strike time up
		token.add ATK_POINTS L_GROUND
		callevent L_STRIKE_TIME lightning_strike
	}

	clientevent new all nashalrath/lightning_strike_cl L_POS L_STRIKE_TIME
}

{ lightning_strike

	local L_POS $get_token(ATK_POINTS,0)
	token.del ATK_POINTS 0
	
	setvard HAZARD_STRUCK 1
	xdodamage L_POS 128 DMG_LIGHTNING_STRIKE 0.1 ent_me ent_me none lightning_effect
}

