			//can't see target, skip for now
			setvard CIRCLE_POS_SET 0
			setvard ANIM_ATTACK attack1
			setvard ATTACK_RANGE ATTACK_RANGE_DEF
			setvard ATTACK_HITRANGE ATTACK_HITRANGE_DEF
