			setmovedest NPCATK_TARGET 9999
			setangle view.pitch 0
			setangle view.roll 0
			setangle view.yaw $get(ent_me,angles.yaw)
			tossprojectile "proj_freezing_sphere" $relpos(0,16,64) none 100 0 0 none 
